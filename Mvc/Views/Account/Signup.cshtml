@model LoginRequestViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Log in";
}

<div class="login-wrapper">
    <div class="login-inner">
        <img src="~/assets/images/logo.png" alt="WorkerHub">
        <div class="login-title">
            <h2>
                ADMINISTRATIVE PORTAL
            </h2>
            <p>
                Enter your details to login into your account
            </p>
        </div>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <ul>
                <li>
                    <input asp-for="Username" class="form-control" autocomplete="username" placeholder="Username" aria-required="true" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </li>
                <li>
                    <input type="submit" name="submit" value="Send Me Mail">
                </li>
            </ul>
        </form>
    </div>
</div>

