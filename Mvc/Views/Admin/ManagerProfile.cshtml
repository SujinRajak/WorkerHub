@inject IQualification info
@inject IEducation edu
@inject ISkill skil
@inject UserManager<ApplicationUser> UserManager
@using System.ComponentModel.DataAnnotations;
@model ProfileDetialViewModel
@{
    ViewBag.Title = "Basic Infromation";
    Layout = "/Views/Shared/_LayoutHire.cshtml";
    var data = "";
    if (Model.AppUser.Availablility)
    {
        data = "Available";
    }
    else
    {
        data = "Not Available";
    }

    var dateChanger = Model.AppUser.dob;
    var photopath = "~/images/" + (Model.AppUser.img ?? "user.png");
    Layout = "/Views/Shared/_adminView.cshtml";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="container" style="margin-top: 30px;">
            <div class="profile-head">
                <div class="row">

                    <div class="col-md- col-sm-4 col-xs-12">
                        <img id="output_image" src="@Url.Content(photopath)" class="img-responsive" asp-append-version="true" />
                    </div>

                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <h5>@Model.AppUser.Firstname @Model.AppUser.LastName</h5>
                        <ul>
                            <li><i class="fa fa-map-marker fa-1x"></i> Nepal</li>
                            <li><i class="fa fa-home fa-1x"></i> @(Model.AppUser.PermanentAddress==null?"-": Model.AppUser.PermanentAddress)</li>
                            <li><i class="fa fa-phone fa-1x"></i> <a href="#" title="call">(+977) @(Model.AppUser.PhoneNumber==null?"--- --- ----": Model.AppUser.PhoneNumber)</a></li>
                            <li><i class="fa fa-envelope fa-1x"></i><a href="#" title="mail"> @Model.AppUser.Email</a></li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        @*container close*@


        <br />
        <br />
        @*profile-head close*@
        <div class="container">
            <div class="row pt-2 pb-2">
                <div class=" col-md-8  offset-2 pt-3">
                    <form enctype="multipart/form-data" method="post">
                        <div class="seperator pt-1">
                            <div class="userinfo ">
                                <div class="userinfoHeader pb-2">
                                    <h4>Basic Information</h4>
                                </div>
                                <div class="UserFrom">
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label>First Name </label>
                                            <input asp-for="FirstName" class="form-control" placeholder="Enter Firstname" disabled />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Last Name</label>
                                            <input asp-for="LastName" class="form-control" placeholder="Enter Lastname" disabled />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label asp-for="dob" class="control-label"></label>
                                            <input type="date" asp-for="dob" class="form-control" disabled />
                                            <span asp-validation-for="dob" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label>Citizenship</label>
                                            <div class="col-sm-12 custom-select">
                                                <select asp-for="citizenship" disabled>
                                                    <option value="None">None</option>
                                                    <option value="Nepali">Nepali</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group  col-md-2">
                                            <label>Blood Group</label>
                                            <div class="col-sm-12 custom-select">
                                                <select asp-for="bloodgroup" disabled>
                                                    <option value="None">None</option>
                                                    <option value="O+">O+</option>
                                                    <option value="O-">O-</option>
                                                    <option value="A+">A+</option>
                                                    <option value="A-">A-</option>
                                                    <option value="B+">B+</option>
                                                    <option value="AB+">AB+</option>
                                                    <option value="AB-">AB-</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group  col-md-6">
                                            <label>Gender</label>
                                            <div class="col-sm-12 custom-select">
                                                <select asp-for="Sex" disabled>
                                                    <option value="None">None</option>
                                                    <option value="Male">Male</option>
                                                    <option value="Female">Female</option>
                                                    <option value="Others">Others</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="col-form-label">Description</label>
                                            <textarea class="form-control" rows="6" cols="108" asp-for="Descripition" placeholder="Enter your Descriptions" disabled></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="seperator pt-5">
                            <div class="userinfo ">
                                <div class="userinfoHeader">
                                    <h4>Contact Information</h4>
                                </div>
                                <div class="UserFrom pt-3">
                                    <div class="row ">
                                        <div class="form-group col-md-4">
                                            <label>Phone Number</label>
                                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" disabled />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-group  col-md-4">
                                            <label>Country</label>
                                            <div class="col-sm-12 custom-select">
                                                <select asp-for="country" disabled>
                                                    <option value="None">None</option>
                                                    <option value="Nepal">Nepal</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group  col-md-4">
                                            <label>States</label>
                                            <div class="col-sm-12 custom-select">
                                                <select asp-for="states" disabled>
                                                    <option value="None">None</option>
                                                    <option value="Province 1">Province 1</option>
                                                    <option value="Province 2">Province 2</option>
                                                    <option value="Bagmati Province">Bagmati Province</option>
                                                    <option value="Gandaki Province">Gandaki Province</option>
                                                    <option value="Lumbini Province">Lumbini Province</option>
                                                    <option value="Karnali Province">Karnali Province</option>
                                                    <option value="Sudurpashchim Province">Sudurpashchim Province</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class=" row">
                                        <div class="form-group  col-md-4">
                                            <label>City</label>
                                            <div class="col-sm-12 custom-select">
                                                <select asp-for="city" disabled>
                                                    <option value="None">None</option>
                                                    <option value="Kathamndu">Kathamndu</option>
                                                    <option value="Pokhara">Pokhara</option>
                                                    <option value="Lalitpur">Lalitpur</option>
                                                    <option value="Bharatpur">Bharatpur</option>
                                                    <option value="Biratnagar">Biratnagar</option>
                                                    <option value="Birgunj">Birgunj</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group  col-md-4">
                                            <label>Street Name</label>
                                            <input asp-for="streetname" class="form-control" placeholder="Enter Street Name" disabled />
                                            <span asp-validation-for="streetname" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label>Permanent Address</label>
                                            <input asp-for="PermanentAddress" class="form-control" placeholder="Enter Your Permanent Address" disabled />
                                            <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label>Temporary Address</label>
                                            <input asp-for="TemporaryAddress" class="form-control" placeholder="Enter Your Temporary Address" disabled />
                                            <span asp-validation-for="TemporaryAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="seperator pt-5">
                            <div class="userinfo ">
                                <div class="userinfoHeader">
                                    <h4>Deavtivation and Availability</h4>
                                </div>
                                <div class="UserFrom pt-3">
                                    <div class="row register-row">
                                        <div class="form-group col-md-6">
                                            <label>Deactivate Account</label>
                                            <div class="col-sm-12 custom-select">
                                                <select asp-for="InactiveUsers" disabled>
                                                    <option value="None">None</option>
                                                    <option value="True">Yes</option>
                                                    <option value="False">No</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="col-form-label">Availability</label>
                                            <div class="col-sm-12 custom-select">
                                                <select asp-for="Availabilility" disabled>
                                                    <option value="None">None</option>
                                                    <option value="True">Yes</option>
                                                    <option value="False">No</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


