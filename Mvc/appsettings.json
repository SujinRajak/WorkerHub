{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=Sujin;Database=WorkerHub;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "PasswordTokenExpireMin": "30", //
  "TokenExpireMin": "720", //12 hours
  "ActivateSerilog": "true",
  "smtpMailSettings": {
    "Smtp": {
      "Host": "localhost",
      "UserName": "",
      "Password": "",
      "Port": 1025,
      "DefaultCredentials": false,
      "EnableSsl": false,
      "FromAddress": "test@email.com"
    }
  },
  "Serilog": {
    "MinimumLevel": "Error",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=Sujin;Database=WorkerHub;Trusted_Connection=True;MultipleActiveResultSets=true",
          "tableName": "ExceptionsLog",
          "autoCreateSqlTable": true, // Set to true if table "ExceptionsLog" is not on database.
          "columnOptionsSection": {
            "customColumns": [
              {
                "ColumnName": "User",
                "DataType": "nvarchar",
                "DataLength": 256,
                "AllowNull": true
              },
              {
                "ColumnName": "ErrorSource",
                "DataType": "nvarchar",
                "DataLength": 50,
                "AllowNull": true
              },
              {
                "ColumnName": "HostName",
                "DataType": "nvarchar",
                "DataLength": 256,
                "AllowNull": true
              }
            ]
          }
        }
      }
    ]
  }
}